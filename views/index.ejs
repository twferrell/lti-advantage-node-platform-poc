<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        
        <meta charset="utf-8">
        <meta name="description" content="LTI 1.3 Platform Demo ">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    
        <base href="/">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css"/>
    </head>
    <body>
        <div class="container">
            <h1 class="heading mt-4 display-4">LTI 1.3 Platform</h1>
            <div class="content-area" >
                <% courses.forEach(function(course, index) { %>
                <div class="course-container mt-4">
                    <h4 class="course-title text-muted">Course <%= index+1 %>: <%= course.title %>
                        <span class="badge badge-secondary course-label bg-info"><%= course.label %></span>
                    </h4>
                    <div class="res-links-container ml-4">
                        <% course.resource_links.forEach(function(resource_link, resIndex) { %>
                            <div class="res-link-container" style="display: flex;">
                                <h5><span class="res-link-title"><a href=/init-login?toolId=<%= resource_link.tool_id %>&resLinkId=<%= resource_link.id %>><%= resource_link.title %></a></span></h5>
                                <span class="res-link-desc ml-1"> - <%= resource_link.description %></span>
                            </div>
                        <% }); %>
                    </div>
                </div>
                <% }); %>
            </div>
    </body>
</html>